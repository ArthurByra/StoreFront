@model StoreFront.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="panel">
    <div class="panel-body">
        <div class="form-group">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(model => model.UserName, new { @autofocus = "autofocus", @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "col-md-2 control-label" })
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EmailAddress, new { @class = "col-md-2 control-label" })
                    @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-primary" value="Register" />
                        @Html.ValidationSummary("", new { @style = "color:red; font-weight:bold" })
                        @if (TempData["Notice"] != null)
                        {
                            <p><span style="color:green;">@Html.Encode(TempData["Notice"] + " Please ")@Html.ActionLink("login.", "Index", "Login")</span></p>
                        }
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Back", "Index", "Home")
            </div>
        </div>
    </div>
</div>

@section Scripts 
{
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="editor-field"></div>