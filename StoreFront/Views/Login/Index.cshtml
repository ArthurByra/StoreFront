@model StoreFront.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="panel">
    <div class="panel-body">
        <div class="form-group">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Username</label>
                    @Html.TextBoxFor(model => model.UserName, new { @autofocus = "autofocus", @class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Password</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Login"/>
                    @Html.ValidationSummary("", new { @style = "color:red; font-weight:bold" })
                </div>
            }
            <div>
                <p>@Html.ActionLink("Back", "Index", "Home")</p>
                <p>   </p>
                <p>@Html.ActionLink("Register as new user", "Index", "Register")</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
